<div id="content">

  <div class="container-fluid">
    <div class="row mx-3">
      <div class="col-lg-12">
        <div class="xlg-font underline d-inline">
          <%= @course.name %>
        </div>
        <div class="md-font-white float-right">
          Logout
        </div>
      </div>
    </div>

    <div class="row mx-3 mt-4">
      <div class="col-lg-12">
        <div class="bx-color bx-sm">
            <div class="row">

                  <div style="display: flex; justify-content:center; align-items:center" class="col-md-2">
                    <%= image_tag image_path('instructor-icon.png'), :class => 'icon-width-lg' %>
                  </div>
                  <div class="col-md-2 md-font-white mt-3">
                    <div class="text-center">
              Cohorts
                    </div>
                    <div class="text-center">
              <%= @course.cohorts.length %>
                    </div>
                  </div>

                  <div style="display: flex; justify-content:center; align-items:center" class="col-md-1 offset-md-7">
                  <%= link_to new_cohort_path do %>
                     <i class="fas fa-plus-circle fa-3x icon-width-lg"></i>
                  <% end %>
                  </div>
              </div>

        </div>
      </div>
    </div>

    <div class="row m-3 mt-5">
      <div class="col-lg-12">
          <div class="container-fluid bx-color bx-xlg py-3">
            <div class="row">
             <% @course.cohorts.each do |cohort| %>
                <div class="col-lg-6">
                  <div class="card my-2">
                    <div class="card-block">
                      <div class="row m-0">

                        <div class="card-title col-lg-3 justify-content-center align-self-center">
                            <i style="color:black" class="fas fa-user-circle fa-3x"></i>
                         </div>

                         <div class="p-2 col-lg-9">
                            <%= link_to cohort_path(cohort) do %>
                               <span class="card-title"> <%=cohort.name %></span>
                            <% end %>
                            <%= link_to cohort_path(cohort), method: "DELETE", data: {confirm: "Are you sure you want to delete this type?" } do %>
                               <i class="fas fa-trash float-right m-1"></i>
                            <% end %>
                            <%= link_to edit_cohort_path(cohort) do %>
                               <i class="fas fa-edit float-right m-1"></i>
                             <% end %>
                             <%= link_to new_cohort_student_path do %>
                                 <i class="fas fa-plus float-right m-1"></i>
                             <% end %>
                            <hr class="m-0">
                            <span class="card-subtitle text-muted">Course: </span>
                            <span class="card-text"><%= cohort.course.name %></span><br>
                            <span class="card-subtitle text-muted">Instructor: </span>
                            <span class="card-text"><%= cohort.instructor.first_name + ' ' + cohort.instructor.last_name %></span><br>
                            <span class="card-subtitle text-muted">Start Date: </span>
                            <span class="card-text"><%= cohort.start_date %></span><br>
                            <span class="card-subtitle text-muted">End Date: </span>
                            <span class="card-text"><%= cohort.end_date %></span>
                         </div>
                      </div>
                    </div>
                  </div>

               </div>
<% end %>

          </div>

      </div>
  </div>
</div>
    <!-- container fluid  -->
   </div>
  </div>
