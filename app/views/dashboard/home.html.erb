<div id="content">

  <div class="container-fluid">
    <div class="row mx-5">
      <div class="col-lg-12">
        <div class="xlg-font underline d-inline">
          Dashboard
        </div>
        <div class="md-font-white float-right">
          Logout
        </div>
      </div>
    </div>

    <div class="row mx-5 mt-4">
      <div class="col-lg-4 col-sm-12">
      <%= link_to instructors_path do %>
        <div class="bx-color bx-sm">
          <div class="row m-0 py-3">
            <div class="col-lg-4 text-center">
              <%= image_tag(image_path('instructor-icon.png'), :class => 'icon-width') %>
            </div>
            <div class="col-lg-8 text-center md-font-white">
              Instructors
              <div class="col-lg-12 text-center xlg-font">
                <%= @instructors.length %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>

      <div class="col-lg-4 col-sm-12">
       <%= link_to courses_path do %>
        <div class="bx-color bx-sm">
          <div class="row m-0 py-3">
            <div class="col-lg-4 text-center">
              <%= image_tag(image_path('instructor-icon.png'), :class => 'icon-width') %>
            </div>
            <div class="col-lg-8 md-font-white text-center">
              Courses
              <div class="col-lg-12 text-center xlg-font">
              <%= @courses.length %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>


      <div class="col-lg-4 col-sm-12">
       <%= link_to students_path do %>
        <div class="bx-color bx-sm">
          <div class="row row-center-100">
            <div class="col-lg-4 text-center">
              <%= image_tag(image_path('instructor-icon.png'), :class => 'icon-width') %>
            </div>
            <div class="col-lg-8 md-font-white text-center">
              Students
              <div class="col-lg-12 text-center xlg-font">
                <%= @students.length %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>

    </div>

    <div class="row m-5">

      <div class="col-lg-7">
        <div class="bx-color bx-lg">
          <div class="col-lg-12 lg-font text-center p-3">
            Calender
          </div>
        </div>
      </div>

      <div class="col-lg-5">
        <div class="bx-color bx-lg">
          <div class="col-lg-12 lg-font text-center p-3">
            User Analytics
          </div>
        </div>
      </div>

    </div>

    <div class="row m-5">
      <div class="col-lg-12">
        <div class="bx-color bx-md">

          <div class="col-lg-12 lg-font px-4 pt-2">
            Latest Cohorts
          </div>
          <div class="col-lg-12 md-font-black p-3">
            Pay Instructors
          </div>


        </div>
      </div>



    </div>
  </div>

</div>
