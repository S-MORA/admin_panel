
    <div id="content">
      <div class="container-fluid">


        <div class="row mx-3">
          <div class="col-lg-12">
            <div class="xlg-font underline d-inline">
            <%= @cohort.name %>
            </div>
            <div class="md-font-white float-right">
              Logout
            </div>
          </div>
        </div>


        <div class="row mx-3 mt-4">
          <div class="col-lg-12">
            <div class="bx-color bx-sm">

                <div class="row">
                      <div style="display: flex; justify-content:center; align-items:center" class="col-md-2">
                        <%= image_tag image_path('instructor-icon.png'), :class => 'icon-width-lg' %>
                      </div>
                      <div class="col-md-2 md-font-white mt-3">
                        <div class="text-center">
                         Students
                        </div>
                        <div class="text-center">
                        <%= @cohort.students.length %>
                        </div>
                      </div>


                </div>


            </div>
          </div>
        </div>

        <div class="row m-3 mt-5">
          <div class="col-lg-12">
              <div class="container-fluid bx-color bx-xlg py-3">
                <div class="row">
                 <% @cohort.students.each do |student| %>
                    <div class="col-lg-4 my-2">
                      <div class="card">
                        <div class="card-block">
                          <div class="row m-0">
                            <div class="card-title col-lg-3 justify-content-center align-self-center">
                                <i style="color:black" class="fas fa-user-circle fa-3x"></i>
                             </div>
                             <div class="p-2 col-lg-9">
                                 <span class="card-title"> <%=student.first_name + ' ' + student.last_name%></span>

                                <%= link_to cohort_student_path(student), method: "DELETE", data: {confirm: "Are you sure you want to delete this student from the cohort?"} do %>
                                  <i class="fas fa-trash float-right m-1"></i>
                                <% end %>
                               <%= link_to edit_cohort_student_path(student) do %>
                                  <i class="fas fa-edit float-right m-1"></i>
                              <%end%>

                                <hr class="m-0">
                                <span class="card-subtitle text-muted">Date Of Birth:  </span>
                                <span class="card-text"><%= student.dob %></span><Br>
                                <span class="card-subtitle text-muted">Education:</span>
                                <span class="card-text"><%= student.education %></span><BR>
                                <span class="card-subtitle text-muted">Enrolled since: </span>
                                <span class="card-text"><%= student.created_at %></span><br>


                             </div>
                          </div>
                        </div>
                      </div>
                   </div>
                  <% end %>
              </div>
          </div>
      </div>
   </div>



<!-- container fluid  -->
      </div>
<!-- content  -->
    </div>
