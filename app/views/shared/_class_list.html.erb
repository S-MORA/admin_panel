<div id="content">

  <div class="container-fluid">
    <div class="row mx-3">
      <div class="col-lg-12">
        <div class="xlg-font underline d-inline">
        <% if types[0].try(:hours)   %>
          Course's Area
          <% else %>
          Cohorts's Area
          <% end %>
        </div>
        <div class="md-font-white float-right">
          Logout
        </div>
      </div>
    </div>


    <div class="row mx-3 mt-4">

      <div class="col-lg-12">
        <div class="bx-color bx-sm">

            <div class="row">
                  <div style="display: flex; justify-content:center; align-items:center" class="col-md-2">
                    <%= image_tag image_path('instructor-icon.png'), :class => 'icon-width-lg' %>
                  </div>
                  <div class="col-md-2 md-font-white mt-3">
                    <div class="text-center">
              <% if types[0].try(:hours)   %>
              Courses
              <% else %>
              Cohorts
             <% end %>
                    </div>
                    <div class="text-center">
                    <%=  types.name %>
                    </div>
                  </div>

                  <div style="display: flex; justify-content:center; align-items:center" class="col-md-1 offset-md-7">
                <% if types[0].try(:hours)   %>
                  <%= link_to new_course_path do %>
                     <i class="fas fa-plus-circle fa-3x icon-width-lg"></i>
                  <% end %>
                <% else %>
                 <%= link_to new_cohort_path do %>
                   <i class="fas fa-plus-circle"></i>
                 <% end %>
                <% end %>
                  </div>
            </div>


        </div>
      </div>
    </div>

    <div class="row m-3 mt-5">
      <div class="col-lg-12">
          <div class="container bx-color bx-xlg py-3">
            <div class="row">
             <% types.each do |type| %>
                <div class="col-lg-6">
            <% if types[0].try(:hours) %>
              <%= link_to cohort_path(type) do  %>
                  <div class="card">
                    <div class="card-block">
                      <div class="row m-0">
                        <div class="card-title col-lg-3 justify-content-center align-self-center">
                            <i style="color:black" class="fas fa-user-circle fa-3x"></i>
                         </div>
                         <div class="p-2 col-lg-9">
                             <span class="card-title"> <%=type.name %></span>
                    <% if types[0].try(:hours)%>
                            <%= link_to course_path(type), method: "DELETE", data: {confirm: "Are you sure you want to delete this type?" } do %>
                               <i class="fas fa-trash float-right m-1"></i>
                            <% end %>
                            <%= link_to edit_course_path(type) do %>
                               <i class="fas fa-edit float-right m-1"></i>
                             <% end %>
                    <% else %>
                            <%= link_to cohort_path(type), method: "DELETE", data: {confirm: "Are you sure you want to delete this type?"} do %>
                              <i class="fas fa-trash float-right m-1"></i>
                            <% end %>
                           <%= link_to edit_cohort_path(type) do %>
                              <i class="fas fa-edit float-right m-1"></i>
                           <% end %>
                   <%end%>

                            <hr class="m-0">
                            <% if types[0].try(:hours)   %>
                            <span class="card-subtitle text-muted">Hours</span>
                            <span class="card-text"><%= type.hours %></span><br>
                            <% else %>
                            <span class="card-subtitle text-muted">Course: </span>
                            <span class="card-text"><%= type.course.name %></span><br>
                            <span class="card-subtitle text-muted">Instructor: </span>
                            <span class="card-text"><%= type.instructor.first_name + ' ' + type.instructor.last_name %></span><br>
                            <span class="card-subtitle text-muted">Start Date: </span>
                            <span class="card-text"><%= type.start_date %></span><br>
                            <span class="card-subtitle text-muted">EndDate: </span>
                            <span class="card-text"><%= type.end_date %></span>
                            <% end %>
                         </div>
                      </div>
                    </div>
                  </div>
                  <% end %>
                  <% end %>
               </div>
              <% end %>
          </div>
      </div>
  </div>
</div>
    <!-- container fluid  -->
   </div>
  </div>
