
    <div id="content">
      <div class="container-fluid">


        <div class="row mx-3">
          <div class="col-lg-12">
            <div class="xlg-font underline d-inline">
        <% if users == @cohorts %>
              Cohort's Area
        <% elsif users == @students %>
              Student's Area
        <% elsif users == @courses %>
               Course's Area
        <% else %>
             Instructor's area
        <% end %>
            </div>
            <div class="md-font-white float-right">
            <%= link_to 'Log Out', destroy_user_session_path, method: 'DELETE'%>
            </div>
          </div>
        </div>


        <div class="row mx-3 mt-4">
          <div class="col-lg-12">
            <div class="bx-color bx-sm">

                <div class="row">
                      <div style="display: flex; justify-content:center; align-items:center" class="col-md-2">
                        <% if users == @cohorts %>
                        <%= image_tag image_path('cohort-icon.png'), :class => 'icon-width-lg' %>
                        <% elsif users == @students %>
                        <%= image_tag image_path('student-icon.png'), :class => 'icon-width-lg' %>
                        <% elsif users = @courses %>
                        <%= image_tag image_path('course-icon.png'), :class => 'icon-width-lg' %>
                        <% else %>
                        <%= image_tag image_path('instructor-icon.png'), :class => 'icon-width-lg' %>
                        <% end %>

                      </div>
                      <div class="col-md-2 md-font-white mt-3">
                        <div class="text-center">
                          <% if users == @cohorts %>
                                Cohorts
                          <% elsif users == @students %>
                                Students
                          <% elsif users == @courses %>
                               Courses
                          <% else %>
                               Instructors
                          <% end %>
                        </div>

                      </div>

                </div>


            </div>
          </div>
        </div>

        <div class="row m-3 mt-5">
           <div class="col-lg-12">
              <div class="container bx-color bx-xlg py-3">
                <div class="row">
                    <div class="col-lg-12">
                      <div class="card">
                        <div class="card-block">
                          <div class="row m-0">
                            <div class="card-title col-lg-3 align-self-center">
                              <% if users == @cohorts %>
                              <%= image_tag image_path('cohort-icon.png'), :class => 'icon-width-xlg' %>
                              <% elsif users == @students %>
                              <%= image_tag image_path('student-icon.png'), :class => 'icon-width-xlg' %>
                              <% elsif users = @courses %>
                              <%= image_tag image_path('course-icon.png'), :class => 'icon-width-xlg' %>
                              <% else %>
                              <%= image_tag image_path('instructor-icon.png'), :class => 'icon-width-xlg' %>
                              <% end %>
                             </div>
                             <div class="p-2 col-lg-9">

                               <%= render 'form' %>

                           </div>
                         </div>
                       </div>
                     </div>
                   </div>
                </div>
             </div>
          </div>
       </div>




<!-- container fluid  -->
      </div>
<!-- content  -->
    </div>
