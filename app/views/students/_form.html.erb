

  <%= form_for @student do |s| %>

  <div class="field">
     <%= s.label :first_name %>
     <%= s.text_field :first_name %>
  </div>

  <div class="field last">
     <%= s.label :last_name %>
     <%= s.text_field :last_name %>
  </div>

  <div class="field">
     <%= s.label :dob %>
     <%= s.date_field :dob %>
  </div>

  <div class="field last radio-inline">

     <%= s.label :education, "High School", :class=> "radio-inline" %>
     <%= s.radio_button :education, "High School"%>

     <%= s.label :education, "Bachelor's", :class=> "radio-inline" %>
     <%= s.radio_button :education, "Bachelor's"%>

     <%= s.label :education, "Master's", :class=> "radio-inline" %>
     <%= s.radio_button :education, "Master's"%>

     <%= s.label :education, "PhD", :class=> "radio-inline" %>
     <%= s.radio_button :education, "PhD"%>

  </div>

  <div >
     <%= s.submit :class=> "link wipe lft-rgt-wipe"%>
  </div>
 <% end %>
